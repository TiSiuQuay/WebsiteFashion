                    <input id="Anh2" type="file" name="fileUpload" class="Anh2 inputAnh2" width="150px" height="150px" accept="image/*"
                           style="display:none;" />
                    <input type="button" value="Đổi" class="btn btn-success btn-chon btnUpload" data-id="Anh2" />
                    <img src="@Model.Anh2" class="Anh2" id="Anh2" width="100px" height="150px" />
