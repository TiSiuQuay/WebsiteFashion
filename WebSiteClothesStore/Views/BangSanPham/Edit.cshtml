@model WebSiteClothesStore.Models.BangSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/HomeLayout/ProductLayoutAdmin.cshtml";
}

<h2>Chỉnh Sửa Sản Phẩm</h2>

@using (Html.BeginForm())
