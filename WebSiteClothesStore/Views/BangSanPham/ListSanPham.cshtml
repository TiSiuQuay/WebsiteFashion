@model IEnumerable<WebSiteClothesStore.Models.BangSanPham>

@{
    ViewBag.Title = "ListSanPham";
    Layout = "~/Views/HomeLayout/ProductLayoutAdmin.cshtml";
}

<h2>DANH SÁCH SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Loại
        </th>
        <th>
            Tên Sản Phẩm 
        </th>
        <th>
            Đồng Giá
        </th>
        <th>
            Ngày Update
        </th>
        <th>
            Mô Tả
        </th>
        <th>
           Lượt Xem
        </th>
