@model IEnumerable<WebSiteClothesStore.Models.CTSanPham>

@{
    ViewBag.Title = "ListCTSanPham";
    Layout = "~/Views/HomeLayout/ProductLayoutAdmin.cshtml";
}

<h2>Danh Sách Chi Tiết Sản Phẩm</h2>


<table class="container">
    <thead>
        <tr>
            <th><h1>Tên Sản Phẩm </h1></th>
            <th><h1>Kích Thước</h1></th>
            <th><h1>Số Lượng Tồn</h1></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BangSanPham.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KichThuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Daxoa)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaCT }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaCT }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaCT })
            </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Create New", "Create")
    </br>
    @Html.ActionLink("Xuất ra Excel", "Export")
</p>
<style>
